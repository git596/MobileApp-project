<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020227"
    tools:context=".ForgotPassword">

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="611dp"
        android:drawablePadding="10dp"
        android:text="Forgot Password"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/s_description4"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotpassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="531dp"
        android:gravity="start"
        android:text="Enter your email address and we will send you reset instructions."
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="416dp"
        android:background="@drawable/border"
        android:backgroundTint="#20FFFFFF"
        android:drawablePadding="20dp"
        android:hint="Email Address"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="#70FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_Btn"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="618dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="59dp"
        android:gravity="center"
        android:backgroundTint="#E14833"
        android:text="RESET PASSWORD"
        android:onClick="openresendmail"
        android:textColor="@color/design_default_color_background"
        android:textSize="20dp" />

</RelativeLayout>