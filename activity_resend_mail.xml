<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020227"
    tools:context=".ResendMail">

    <TextView
        android:id="@+id/resetemail"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="611dp"
        android:drawablePadding="10dp"
        android:text="Reset email sent"
        android:textColor="@color/white"
        android:gravity="start"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/s_description5"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetemail"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="533dp"
        android:gravity="start"
        android:text="We have sent an instructions email to ishadya@yahoo.com"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resend_Btn"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="618dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="59dp"
        android:gravity="center"
        android:backgroundTint="#E14833"
        android:text="RESEND"

        android:textColor="@color/design_default_color_background"
        android:textSize="20dp" />

</RelativeLayout>