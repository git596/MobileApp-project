<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020227"
    tools:context=".MainActivity_2">

    <TextView
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:text="Create Account"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/s_description2"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_account"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="75dp"
        android:gravity="start"
        android:text="Enter your Name, Email, Mobile and Password for sign up."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/already_haveaccount"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="50dp"
        android:onClick="openmain_01"
        android:text="Already have an account?"
        android:textColor="#ff0000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="377dp"
            android:layout_height="65dp"
            android:layout_below="@+id/already_haveaccount"
            android:layout_marginStart="16dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="376dp"
            android:background="@drawable/border"
            android:backgroundTint="#20FFFFFF"
            android:drawablePadding="20dp"
            android:hint="First Name and Last Name"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="#70FFFFFF" />

        <EditText
            android:id="@+id/email"
            android:layout_width="377dp"
            android:layout_height="65dp"
            android:layout_below="@+id/name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-365dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/border"
            android:backgroundTint="#20FFFFFF"
            android:drawablePadding="20dp"
            android:hint="Email Address"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="#70FFFFFF" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="377dp"
            android:layout_height="65dp"
            android:layout_below="@+id/email"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/border"
            android:backgroundTint="#20FFFFFF"
            android:drawablePadding="20dp"
            android:hint="Mobile"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="#70FFFFFF" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="377dp"
            android:layout_height="65dp"
            android:layout_below="@+id/mobile"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/border"
            android:backgroundTint="#20FFFFFF"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:padding="20dp"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="#70FFFFFF" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="377dp"
            android:layout_height="65dp"
            android:layout_below="@+id/password1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/border"
            android:backgroundTint="#20FFFFFF"
            android:drawablePadding="20dp"
            android:hint="Re-enter Password"
            android:padding="20dp"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="#70FFFFFF" />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_Btn"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="618dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="59dp"
        android:gravity="center"
        android:text="SIGN UP"

        android:backgroundTint="#E14833"
        android:textColor="@color/design_default_color_background"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/s_description1"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-40dp"
        android:gravity="center"
        android:text="By Signing up you agree to our Terms Conditions and Privacy Policy."
        android:textColor="@color/white" />

</RelativeLayout>